            <Grid x:Name="grid"
                  Width="70"
                  Height="Auto"
                  HorizontalAlignment="Left"
                  Background="#FFC33535"
                  Panel.ZIndex="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Button Grid.Row="0"
                        Background="#00000000"
                        Width="50"
                        Height="50"
                        Name="ListButtonOpen"
                        HorizontalAlignment="Right"
                        BorderBrush="#00000000"
                        Foreground="#00000000"
                        Padding="0,0,0,0"
                        Click="ListButtonOpen_Click"
                        Margin="0,0,10,0">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <materialDesign:PackIcon Kind="Menu"
                                                     Width="50"
                                                     Height="50"
                                                     VerticalAlignment="Center"
                                                     Foreground="#FFCDCDCD" />
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
                <Button Grid.Row="0"
                        Background="#00000000"
                        Name="ListButtonClose"
                        Width="50"
                        Height="50"
                        HorizontalAlignment="Right"
                        BorderBrush="#00000000"
                        Foreground="#00000000"
                        Padding="0,0,0,0"
                        Visibility="Collapsed"
                        Click="ListButtonClose_Click"
                        Margin="0,0,10,0">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <materialDesign:PackIcon Kind="Menu"
                                                     Width="50"
                                                     Height="50"
                                                     VerticalAlignment="Center"
                                                     Foreground="#FFCDCDCD" />
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <ListView Grid.Row="1"
                          Name="Menu"
                          Width="300"
                          HorizontalAlignment="Left"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListViewItem x:Name="ElementAddZayvki"
                                  Height="90"
                                  PreviewMouseDown="TextBlock_PreviewMouseDown">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon  Kind="Plus"
                                                      Width="50"
                                                      Height="50"
                                                      VerticalAlignment="Center"
                                                      Foreground="#FFCDCDCD" />
                            <TextBlock x:Name="textBlock"
                                       Text="Добавить заявку"
                                       Foreground="#FFCDCDCD"
                                       FontSize="25"
                                       FontFamily="Dubai Light"
                                       VerticalAlignment="Center"
                                       Margin="30,0,0,0"
                                       Visibility="Hidden" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="ElementZayvki"
                                  Height="90"
                                  PreviewMouseDown="ElementZayvki_PreviewMouseDown">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="BellRing"
                                                     Width="50"
                                                     Height="50"
                                                     VerticalAlignment="Center"
                                                     Foreground="#FFCDCDCD" />
                            <TextBlock x:Name="textBlock1"
                                       Text="Заявки"
                                       Foreground="#FFCDCDCD"
                                       FontSize="25"
                                       FontFamily="Dubai Light"
                                       VerticalAlignment="Center"
                                       Margin="30,0,0,0"
                                       Visibility="Hidden" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="ElementZayvkiProsmotr"
                                  Height="90">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Eye"
                                                     Width="50"
                                                     Height="50"
                                                     VerticalAlignment="Center"
                                                     Foreground="#FFCDCDCD" />
                            <TextBlock x:Name="textBlock2"
                                       Text="Просмотр"
                                       Foreground="#FFCDCDCD"
                                       FontSize="25"
                                       FontFamily="Dubai Light"
                                       VerticalAlignment="Center"
                                       Margin="30,0,0,0"
                                       Visibility="Hidden" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="ElementZayvkiSotrudnicki"
                                  Height="90"
                                  PreviewMouseDown="ElementZayvkiSotrudnicki_PreviewMouseDown">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Person"
                                                     Width="50"
                                                     Height="50"
                                                     VerticalAlignment="Center"
                                                     Foreground="#FFCDCDCD" />
                            <TextBlock x:Name="textBlock3"
                                       Text="Сотрудники"
                                       Foreground="#FFCDCDCD"
                                       FontSize="25"
                                       FontFamily="Dubai Light"
                                       VerticalAlignment="Center"
                                       Margin="30,0,0,0"
                                       Visibility="Hidden" />
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="ElementBack"
                                  Height="90">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowBack"
                                                     Width="50"
                                                     Height="50"
                                                     VerticalAlignment="Center"
                                                     Foreground="#FFCDCDCD" />
                            <TextBlock x:Name="textBlock4"
                                       Text="Выйти"
                                       Foreground="#FFCDCDCD"
                                       FontSize="25"
                                       FontFamily="Dubai Light"
                                       VerticalAlignment="Center"
                                       Margin="30,0,0,0"
                                       Visibility="Hidden" />
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </Grid>

            <Frame x:Name="Frame"
                   NavigationUIVisibility="Hidden" />

        </Grid>




    </Grid>
</Window>
