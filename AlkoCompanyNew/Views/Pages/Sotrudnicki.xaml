            <ColumnDefinition Width="70" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="90" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0"
              Background="#FFEAEAEA">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="1"
                    Height="Auto"
                    Width="Auto"
                    CornerRadius="30"
                    Background="White"
                    Margin="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>




                        <Button HorizontalAlignment="Right"
                    Name="OpenMenu"
                    Click="OpenMenu_Click"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Background="#00000000"
                    BorderBrush="#00000000"
                    Foreground="#FF4F4F4F" 
                    Visibility="Hidden"
                                >
                            <materialDesign:PackIcon Kind="DotsHorizontal"
                                         Width="60"
                                         Height="60"
                                         VerticalAlignment="Center"
                                         Foreground="#FF939393" />
                        </Button>
                        <Button HorizontalAlignment="Right"
                    Name="CloseMenu"
                    Click="CloseMenu_Click"
                    Grid.Column="2"
                    VerticalAlignment="Center"
                    Background="#00000000"
                    BorderBrush="#00000000"
                    Foreground="#FF4F4F4F"
                    Visibility="Hidden">
                            <materialDesign:PackIcon Kind="DotsHorizontal"
                                         Width="60"
                                         Height="60"
                                         VerticalAlignment="Center"
                                         Foreground="#FF939393" />
                        </Button>

                        <Grid x:Name="grid"
                  Grid.Column="2"
                  Width="Auto">
                            <Button Grid.Column="1"
                        x:Name="Add"
                        Height="40"
                        Width="Auto"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Visibility="Hidden"
                        Click="Add_Click">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus"
                                                 Width="Auto"
                                                 Height="Auto"
                                                 VerticalAlignment="Center"
                                                 Foreground="#FFCB0000" />
                                    <TextBlock x:Name="textBlockAdd"
                                Text="Добавить"
                                Background="Transparent"
                                Foreground="#FF252525"
                                FontSize="18"
                                FontFamily="Dubai Light"
                                VerticalAlignment="Center"
                                Margin="8,0,0,0" />
                                </StackPanel>
                            </Button>
                            <Button Grid.Column="1"
                        x:Name="Edit"
                        Height="40"
                        Width="Auto"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Visibility="Hidden"
                        Click="OnEditClick">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Edit"
                                                 Width="Auto"
                                                 Height="Auto"
                                                 VerticalAlignment="Center"
                                                 Foreground="#FFCB0000" />
                                    <TextBlock 
                                x:Name="textBlockEdit"
                                Text="Редактировать"
                                Background="Transparent"
                                Foreground="#FF252525"
                                FontSize="18"
                                FontFamily="Dubai Light"
                                VerticalAlignment="Center"
                                Margin="8,0,0,0" />
                                </StackPanel>
                            </Button>
                            <Button Grid.Column="1"
                        x:Name="Del"
                        Height="40"
                        Width="Auto"
                        Background="{x:Null}"
                        BorderBrush="{x:Null}"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Visibility="Hidden"
                        Click="OnDeleteClick">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Delete"
                                                 Width="Auto"
                                                 Height="Auto"
                                                 VerticalAlignment="Center"
                                                 Foreground="#FFCB0000" />
                                    <TextBlock 
                                x:Name="textBlockDel"
                                Text="Удалить"
                                Background="Transparent"
                                Foreground="#FF252525"
                                FontSize="18"
                                FontFamily="Dubai Light"
                                VerticalAlignment="Center"
                                Margin="8,0,0,0" />
                                </StackPanel>
                            </Button>
                        </Grid>




                        
                        <TextBox x:Name="TextBoxSearch"
                             TextChanged="TextBoxSearch_TextChanged"
                     Grid.Column="3"
                     materialDesign:HintAssist.Hint="Поиск"
                     materialDesign:HintAssist.IsFloating="True"
                     Width="300"
                     Height="60"
                     FontSize="20"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Center"
                     BorderBrush="#FFAEAEAE"
                     CaretBrush="Black"
                     Background="Transparent"
                     Foreground="Black"
                     FontFamily="Dubai Light"
                     Margin="0,0,30,0" />
                    </Grid>
                </Border>
            </Grid>


